    <div class="card mx-auto tilt fw-medium" style="width: 15rem;" data-controller="card" data-card-target="card" data-action="mouseover->card#mouseover"  >
    <%= image_tag image_url , alt: alt_text , class: "card-img-top" %>
      <div class="card-body d-flex flex-column align-items-center" >
        <h5 class="card-title "><%= title %></h5>
        <p class="card-text text-center hidden"  data-card-target="text" ><%= description %></p>
        <button type="button" class="btn btn-primary active fw-bold " data-bs-toggle="button" aria-pressed="true" data-action="click->card#opennclose">+ Info</button>
       
      </div>
    </div>
