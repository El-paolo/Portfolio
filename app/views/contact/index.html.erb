
<div class="container rounded bg-dark py-5" >
  <h3 class="text-center" style="color:white;" >Get My CV to your email!</h3>

  <%= form_with url: send_cv_path, method: :post do |form| %>
  <div class="mb-3" >
  <%= form.email_field :email, placeholder: "email@example.com", required:true ,class:"form-control", type:"email" %>
  </div>
  <div class="d-flex justify-content-center row" >
  <%= form.submit "Get CV", class:"btn btn-success col-6 py-2" %>
  </div>
<% end %>

</div>
